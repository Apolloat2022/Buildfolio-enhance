// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DIRECT_URL")
}

model User {
  id            String         @id @default(cuid())
  name          String?
  email         String?        @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  
  // Gamification fields
  totalPoints      Int      @default(0)
  currentStreak    Int      @default(0)
  longestStreak    Int      @default(0)
  lastActiveDate   DateTime?
  level            Int      @default(1)
  
  // Relations  // Relations
  accounts         Account[]
  sessions         Session[]
  projects         Project[]
  subscriptions    Subscription[]
  startedProjects  StartedProject[]
  showcases        Showcase[]
  showcaseComments ShowcaseComment[]
  resumeProfile    ResumeProfile?
  badges           UserBadge[]
  achievements     Achievement[]
  questions        Question[]
  replies          Reply[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Project {
  id          String   @id @default(cuid())
  title       String
  description String?
  status      String   @default("planned")
  tags        String[]
  githubUrl   String?
  liveUrl     String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relations
  userId      String
  user        User     @relation(fields: [userId], references: [id])
}

model Step {
  id                String   @id @default(cuid())
  order             Int
  title             String
  description       String?
  codeSnippets      Json?
  pitfalls          String[]
  estimatedTime     String?
  
  // Gamification fields
  videoUrl         String?
  hints            Json?
  estimatedMinutes Int?
  
  // Relations
  projectTemplateId String
  projectTemplate   ProjectTemplate @relation(fields: [projectTemplateId], references: [id], onDelete: Cascade)
  questions         Question[]
  
  @@unique([projectTemplateId, order])
  @@index([projectTemplateId])
}

model ProjectTemplate {
  id              String   @id @default(cuid())
  slug            String   @unique
  title           String
  description     String?
  difficulty      String   @default("beginner")
  timeEstimate    String?
  technologies    String[]
  resumeImpact    Int?
  category        String?
  steps           Step[]
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  // Relations
  startedProjects StartedProject[]
  
  @@index([slug])
}

model StartedProject {
  id                String   @id @default(cuid())
  userId            String
  projectTemplateId String
  status            String   @default("not-started")
  progress          Int      @default(0)
  completedSteps    String[] @default([])
  startedAt         DateTime @default(now())
  lastActivityAt    DateTime @default(now())
  completedAt       DateTime?
  
  // Gamification fields
  timeSpentMinutes Int      @default(0)
  lastWorkedOn     DateTime @default(now())
  hintLevel        Int      @default(0)
  
  // Relations
  user            User            @relation(fields: [userId], references: [id])
  projectTemplate ProjectTemplate @relation(fields: [projectTemplateId], references: [id])
  
  @@unique([userId, projectTemplateId])
  @@index([userId])
  @@index([projectTemplateId])
}

model Subscription {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  plan        String   @default("FREE")
  status      String   @default("ACTIVE")
  expiresAt   DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([userId])
}

model Badge {
  id          String      @id @default(cuid())
  name        String      @unique
  description String
  icon        String
  criteria    String
  points      Int         @default(0)
  createdAt   DateTime    @default(now())
  
  users       UserBadge[]
}

model UserBadge {
  id          String   @id @default(cuid())
  userId      String
  badgeId     String
  unlockedAt  DateTime @default(now())
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  badge       Badge    @relation(fields: [badgeId], references: [id], onDelete: Cascade)
  
  @@unique([userId, badgeId])
  @@index([userId])
}

model Achievement {
  id          String   @id @default(cuid())
  userId      String
  title       String
  description String
  points      Int
  icon        String
  createdAt   DateTime @default(now())
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
}

model Question {
  id              String   @id @default(cuid())
  stepId          String
  userId          String
  question        String   @db.Text
  answer          String?  @db.Text
  upvotes         Int      @default(0)
  isAnswered      Boolean  @default(false)
  createdAt       DateTime @default(now())
  
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  step            Step     @relation(fields: [stepId], references: [id], onDelete: Cascade)
  replies         Reply[]
  
  @@index([stepId])
  @@index([userId])
}

model Reply {
  id          String   @id @default(cuid())
  questionId  String
  userId      String
  content     String   @db.Text
  upvotes     Int      @default(0)
  createdAt   DateTime @default(now())
  
  question    Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([questionId])
}
// Code Snippet Library
model Snippet {
  id          String   @id @default(cuid())
  title       String
  description String?
  code        String   @db.Text
  language    String
  category    String
  tags        String[]
  usageCount  Int      @default(0)
  createdAt   DateTime @default(now())
  
  @@index([language])
  @@index([category])
}
// Project Showcase Gallery
model Showcase {
  id              String   @id @default(cuid())
  userId          String
  projectSlug     String
  title           String
  description     String?  @db.Text
  imageUrl        String?
  githubUrl       String?
  liveUrl         String?
  tags            String[]
  likes           Int      @default(0)
  featured        Boolean  @default(false)
  createdAt       DateTime @default(now())
  
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  comments        ShowcaseComment[]
  
  @@index([userId])
  @@index([projectSlug])
  @@index([featured])
}

model ShowcaseComment {
  id          String   @id @default(cuid())
  showcaseId  String
  userId      String
  content     String   @db.Text
  createdAt   DateTime @default(now())
  
  showcase    Showcase @relation(fields: [showcaseId], references: [id], onDelete: Cascade)
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([showcaseId])
  @@index([userId])
}
model ResumeProfile {
  id                  String   @id @default(cuid())
  userId              String   @unique
  user                User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  phone               String?
  location            String?
  website             String?
  linkedin            String?
  github              String?
  professionalSummary String?  @db.Text
  workExperience      Json?
  education           Json?
  certifications      Json?
  skills              Json?
  languages           String[]
  
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  
  @@index([userId])
}
